<section id="servicios" class="bg-white py-16 px-6 md:px-12 lg:px-20">
  <div class="max-w-6xl mx-auto text-center">
    <h2 class="text-2xl sm:text-3xl md:text-4xl font-bold text-gray-800 mb-10">
      Nuestros Servicios
    </h2>

    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-8">
      <!-- Servicio 1 -->
      <div class="bg-blue-50 p-6 rounded-lg shadow hover:shadow-lg transition">
        <div class="text-4xl mb-4 text-blue-600">🧰</div>
        <h3 class="text-xl font-semibold mb-2">Instalación</h3>
        <p class="text-gray-700">Colocación profesional de equipos split, multisplit e inverter.</p>
      </div>

      <!-- Servicio 2 -->
      <div class="bg-blue-50 p-6 rounded-lg shadow hover:shadow-lg transition">
        <div class="text-4xl mb-4 text-blue-600">🧼</div>
        <h3 class="text-xl font-semibold mb-2">Mantenimiento</h3>
        <p class="text-gray-700">Limpieza profunda de unidades internas y externas.</p>
      </div>

      <!-- Servicio 3 -->
      <div class="bg-blue-50 p-6 rounded-lg shadow hover:shadow-lg transition">
        <div class="text-4xl mb-4 text-blue-600">💻</div>
        <h3 class="text-xl font-semibold mb-2">Reparación de Plaquetas</h3>
        <p class="text-gray-700">Reparación y diagnóstico de placas electrónicas inverter.</p>
      </div>

      <!-- Servicio 4 -->
      <div class="bg-blue-50 p-6 rounded-lg shadow hover:shadow-lg transition">
        <div class="text-4xl mb-4 text-blue-600">❄️</div>
        <h3 class="text-xl font-semibold mb-2">Carga de Gas</h3>
        <p class="text-gray-700">Revisión del circuito frigorífico y recarga de refrigerante.</p>
      </div>
    </div>
  </div>
</section>
