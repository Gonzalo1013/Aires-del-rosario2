<footer class="bg-gray-900 text-gray-300 py-10 px-6 md:px-12 lg:px-20">
  <div class="max-w-6xl mx-auto grid gap-8 md:grid-cols-3">
    <!-- Columna 1: Marca -->
    <div>
      <h3 class="logo-footer text-xl font-bold text-white hover:text-blue-400 mb-2">Aires del Rosario</h3>
      <p class="text-sm">
        Instalación, mantenimiento y reparación de aires acondicionados en Rosario y alrededores.
      </p>
    </div>

    <!-- Columna 2: Navegación -->
    <div>
      <h4 class="text-lg font-semibold mb-2 text-white">Navegación</h4>
      <ul class="space-y-2 text-sm">
        <li><a href="/" class="hover:text-blue-400 transition">Inicio</a></li>
        <li><a href={Astro.url.pathname === "/" ? "#servicios" : "/#servicios"} class="hover:text-blue-400 transition">Servicios</a></li>
        <li><a href="/contacto" class="hover:text-blue-400 transition">Contacto</a></li>
      </ul>
    </div>

    <!-- Columna 3: Redes -->
    <div>
      <h4 class="text-lg font-semibold mb-2 text-white">Contacto</h4>
      <ul class="space-y-2 text-sm">
        <li>
          <a
            href="https://www.instagram.com/aires.delrosario"
            target="_blank"
            rel="noopener"
            class="flex items-center gap-2 hover:text-pink-400 transition"
          >
            <span>
              <img src="/instagram-icon.png" alt="instagram" class="w-5 h-5 rounded-full inline-block" />  
            </span> Instagram
          </a>
        </li>
        <li>
          <a
            href="https://wa.me/5493412297176"
            target="_blank"
            rel="noopener"
            class="flex items-center gap-2 hover:text-green-400 transition"
          >
            <span>
              <img src="/whatsapp-icon.png" alt="whatsApp" class="w-5 h-5 rounded-full inline-block" />  
            </span> WhatsApp
          </a>
        </li>
      </ul>
    </div>
  </div>

  <!-- Línea inferior -->
  <div class="mt-10 border-t border-gray-700 pt-6 text-center text-xs text-gray-500">
    © {new Date().getFullYear()} AiresdelRosairo. Todos los derechos reservados.
  </div>
</footer>


<style>
  h3.logo-footer:hover {
  filter: drop-shadow(0 0 8px white );
  
}
</style>